@model ProductPhoto
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/SavePhoto">

            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <input type="hidden" name="@nameof(Model.PhotoID)" value="@Model.PhotoID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn file ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    @Html.ValidationMessage(nameof(Model.Photo), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" src="~/images/products/photos/@Model.Photo" class="img img-bordered"
                         style="width: 230px; object-fit: cover; background: silver" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           name="@nameof(Model.Description)"
                           value="@Model.Description" autofocus
                           id="Description"
                           maxlength="200"
                           oninput="countCharacters()" />

                    <!-- Phần hiển thị số lượng từ -->
                    <span id="charCount" style="position: absolute; top: -15px; right: 18px; color: gray; font-size: 0.9em;">0/200</span>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="@nameof(Model.DisplayOrder)" value="@Model.DisplayOrder" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder), new { @style = "color:#f00" })
                    @Html.ValidationMessage("Invalid", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="@nameof(Model.IsHidden)" value="true" @(Model.IsHidden ? "checked" : "") /> Không hiển thị ảnh
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>

@section scripts {
    <script>
        function countCharacters() {
            const textarea = document.getElementById("Description");
            const charCountDisplay = document.getElementById("charCount");

            // Lấy giá trị từ textarea và đếm số ký tự
            const charCount = textarea.value.length;
            const maxChars = 200;

            // Cập nhật số lượng ký tự hiển thị
            charCountDisplay.innerText = `${charCount}/${maxChars}`;
        }

        // Gọi hàm đếm ký tự khi trang tải để hiển thị giá trị ban đầu
        document.addEventListener("DOMContentLoaded", countCharacters);
    </script>
}