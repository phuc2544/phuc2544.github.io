@model OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/UpdateDetail/@Model.OrderID" method="post" class="form-horizontal">

            <input type="hidden" name="@nameof(Model.OrderID)" value="@Model.OrderID" />
            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <input type="hidden" name="@nameof(Model.ProductName)" value="@Model.ProductName" />
            <input type="hidden" name="@nameof(Model.Unit)" value="@Model.Unit" />

            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="text-center" style="margin-top: 10px;">@Html.ValidationMessage("Invalid", new { @style = "color:#f00; font-size: 20;" })</div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.ProductName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.Unit</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" name="@nameof(Model.Quantity)" value="@Model.Quantity" min="1" />
                        @Html.ValidationMessage(nameof(Model.Quantity), new { @style = "color:#f00" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control number-separator"
                               value="@Model.SalePrice" name="@nameof(Model.SalePrice)" placeholder="Nhập giá bán" />
                        @Html.ValidationMessage(nameof(Model.SalePrice), new { @style = "color:#f00" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Thêm thư viện Inputmask -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.7/inputmask.min.js"></script>

<script>
    $(document).ready(function () {
        // Áp dụng Inputmask vào trường giá bán
        $('.number-separator').inputmask({
            alias: 'numeric',
            groupSeparator: ',',
            autoGroup: true,
            digits: 0,
            digitsOptional: false,
            placeholder: '',
            rightAlign: false,
            removeMaskOnSubmit: true
        });
    });
</script>




