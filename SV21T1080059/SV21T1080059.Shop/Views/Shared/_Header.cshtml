
<header class="main-header">
    <!-- Logo -->
    <a href="~/" class="logo">
        <span class="logo-mini"><b>TIN</b></span>
        <span class="logo-lg"><b>TIN</b> Shop</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @{
                    var userData = CommonDataService.GetCustomer(int.Parse(User.GetUserData().UserId));
                    
                    if (userData != null)
                    {
                        <!-- User Account: style can be found in dropdown.less -->
                        <li>
                            <a href="~/Shopping/Index" >
                                <i class="fa fa-shopping-cart" style="font-size: 22px;"></i>
                                <span id="cart-total-quantity" class="label label-danger" style="font-size: 10px;">0</span> <!-- Số lượng mặc định -->
                            </a>
                        </li>


                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src=@(string.IsNullOrEmpty(userData.Photo) ? Url.Content($"~/images/customer/nophoto.png") : Url.Content($"~/images/customer/{userData.Photo}"))
                                     class="user-image" alt="User Image">
                                <span class="hidden-xs">@userData.ContactName</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src=@(string.IsNullOrEmpty(userData.Photo) ? Url.Content($"~/images/customer/nophoto.png") : Url.Content($"~/images/customer/{userData.Photo}"))
                                         class="img-circle" alt="User Image">
                                    <p>
                                        @userData.ContactName
                                    </p>
                                </li>

                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/Account/ChangePassword" class="btn btn-default btn-flat">Đổi mật khẩu</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="~/Account/Logout" class="btn btn-default btn-flat">Thoát</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
</header>

