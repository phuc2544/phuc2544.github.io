@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TIN Shop - Đăng ký</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/themes/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/themes/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/themes/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/themes/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a><b>TIN</b> Shop</a>
        </div>
        <!-- /.register-logo -->
        <div class="register-box-body">
            <p class="register-box-msg">Tạo tài khoản mới</p>

            <form action="~/Account/SignUp" method="post">

                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Tên đăng nhập (Email)" name="username" value="@ViewData["Username"]" autofocus>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessage("Username", new { @style = "color:#f00" })
                </div>

                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Mật khẩu" name="password" >
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu" name="confirmPassword" >
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessage("confirmPassword", new { @style = "color:#f00" })
                </div>

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Số điện thoại" name="phone" value="@ViewData["Phone"]">
                    <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Họ tên" name="customerName" value="@ViewData["CustomerName"]">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Tên hiển thị" name="contactName" value="@ViewData["ContactName"]">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                <div class="form-group text-center">
                    @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                </div>
                <div class="form-group text-left">
                    <a href="~/Account/Login" class="text-center">Đã có tài khoản? Đăng nhập</a>
                </div>

                <div class="row">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-4">
                        <a href="javascript:window.history.back();" class="btn btn-default btn-block btn-flat">
                            Quay lại
                        </a>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng ký</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.register-box-body -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 3 -->
    <script src="~/themes/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/themes/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
